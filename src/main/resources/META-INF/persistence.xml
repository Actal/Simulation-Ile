<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Simulation-Ile" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>fr.formation.model.Adresse</class>
		<class>fr.formation.model.Batiment</class>
		<class>fr.formation.model.Biome</class>
		<class>fr.formation.model.Coordonnees</class>
		<class>fr.formation.model.Habitation</class>
		<class>fr.formation.model.Metier</class>
		<class>fr.formation.model.Personne</class>
		<class>fr.formation.model.Workplace</class>
		<!-- Eventuellement d'autres classes d'Entité -->
		
		<properties>
			<!-- Listes des propriétés liées à l'implémentation (Hibernate, OpenJPA, ...) -->
			
			<!-- DataSource (URL, Driver, Username, Password) -->
			<property name="hibernate.connection.url" value="jdbc:postgresql://127.0.0.1:5432/Simulation-Ile" />
			<property name="hibernate.connection.driver" value="org.postgresql.Driver" />
			<property name="hibernate.connection.user" value="postgres" />
			<property name="hibernate.connection.password" value="28041993" />
			
			
			<!-- Permet d'exécuter les requêtes DDL pour la génération de la base de données -->
			<!-- Valeurs possibles : validate, update, create, create-drop -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			
			<!-- On utilise le moteur innoDB (MySQL ou MariaDB) -->
			<!-- <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" /> -->
			
			<!-- On imprime les requêtes SQL générées par Hibernate dans la console -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="false" />
		</properties>
	</persistence-unit>
</persistence>
